/*Design, Develop and Implement a menu driven Program in C for the following
operations on Doubly Linked List (DLL) for data of integers.
• Create a DLL of data .
• Perform Insertion and Deletion at End of DLL.
• Perform Insertion and Deletion at Front of DLL.
• Display the status of DLL and count the number of nodes in it.
• Exit*/

#include <stdio.h>
#include <stdlib.h>

// Structure definition for a node in DLL
struct Node {
    int data;
    struct Node *prev;
    struct Node *next;
};

struct Node *head = NULL;

// Function to create DLL (front insertion)
void createNode(int value) {
    struct Node *newNode = (struct Node *)malloc(sizeof(struct Node));
    newNode->data = value;
    newNode->prev = NULL;
    newNode->next = NULL;

    if (head == NULL) {
        head = newNode;
    } else {
        newNode->next = head;
        head->prev = newNode;
        head = newNode;
    }
    printf("Inserted %d at front.\n", value);
}

// Function to insert node at end
void insertEnd(int value) {
    struct Node *newNode = (struct Node *)malloc(sizeof(struct Node));
    newNode->data = value;
    newNode->next = NULL;

    if (head == NULL) {
        newNode->prev = NULL;
        head = newNode;
        printf("Inserted %d as the first node.\n", value);
        return;
    }

    struct Node *temp = head;
    while (temp->next != NULL)
        temp = temp->next;

    temp->next = newNode;
    newNode->prev = temp;

    printf("Inserted %d at end.\n", value);
}

// Function to delete node from front
void deleteFront() {
    if (head == NULL) {
        printf("List is empty.\n");
        return;
    }

    struct Node *temp = head;
    printf("Deleted node with data %d from front.\n", temp->data);
    head = head->next;

    if (head != NULL)
        head->prev = NULL;

    free(temp);
}

// Function to delete node from end
void deleteEnd() {
    if (head == NULL) {
        printf("List is empty.\n");
        return;
    }

    struct Node *temp = head;

    // Only one node
    if (head->next == NULL) {
        printf("Deleted node with data %d from end.\n", head->data);
        free(head);
        head = NULL;
        return;
    }

    // Move to last node
    while (temp->next != NULL)
        temp = temp->next;

    printf("Deleted node with data %d from end.\n", temp->data);
    temp->prev->next = NULL;
    free(temp);
}

// Function to display DLL and count nodes
void displayList() {
    if (head == NULL) {
        printf("List is empty.\n");
        return;
    }

    struct Node *temp = head;
    int count = 0;

    printf("\nDoubly Linked List elements:\n");
    while (temp != NULL) {
        printf("%d <-> ", temp->data);
        temp = temp->next;
        count++;
    }
    printf("NULL\nTotal number of nodes = %d\n", count);
}

// Main function - menu driven
int main() {
    int choice, value;

    do {
        printf("\n========== MENU ==========\n");
        printf("1. Create DLL (Front Insertion)\n");
        printf("2. Insert at End\n");
        printf("3. Delete from Front\n");
        printf("4. Delete from End\n");
        printf("5. Display DLL and Count Nodes\n");
        printf("6. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter value to insert at front: ");
                scanf("%d", &value);
                createNode(value);
                break;

            case 2:
                printf("Enter value to insert at end: ");
                scanf("%d", &value);
                insertEnd(value);
                break;

            case 3:
                deleteFront();
                break;

            case 4:
                deleteEnd();
                break;

            case 5:
                displayList();
                break;

            case 6:
                printf("Exiting program...\n");
                break;

            default:
                printf("Invalid choice! Try again.\n");
        }

    } while (choice != 6);

    return 0;
}
